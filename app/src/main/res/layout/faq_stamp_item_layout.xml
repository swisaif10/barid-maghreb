<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:paddingHorizontal="20dp"
            android:paddingVertical="25dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/arrow"
            app:drawableTint="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="J’aimerais acheter en ligne des produits philatéliques marocains autre que les timbres disponibles sur la présente application, que puis- faire ?" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginBottom="15dp"
            android:alpha="0.3"
            android:background="#707070"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/question" />

        <TextView
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:paddingHorizontal="20dp"
            android:paddingBottom="25dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/separator"
            tools:text="Cher client, Pour effectuer des achats de produits philatéliques marocains en ligne, veuillez accéder à notre site : http://www.philatelie.ma sur lequel vous trouverez le processus d’achat jusqu’au paiement." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>