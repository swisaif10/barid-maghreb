<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg"
        android:paddingHorizontal="25dp"
        android:paddingVertical="15dp">

        <ImageView
            android:id="@+id/copy"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            tools:src="@drawable/pr20_30" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/pr20_30" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/copy"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/image"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="100 cm * 150 cm100 cm* 150 cm " />

            <TextView
                android:id="@+id/timbreDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@color/black"
                android:textSize="11sp"
                tools:text="Description" />

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/blue"
                    android:textSize="13sp"
                    tools:text="3000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/price_unit"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:background="@drawable/rounded_bordered_background">

                    <RelativeLayout
                        android:id="@+id/decreaseBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/quantity">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="5dp"
                            android:src="@drawable/ic_moins" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <RelativeLayout
                        android:id="@+id/increaseBtn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@id/quantity">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_plus" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/addBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/add_btn_background"
                    android:backgroundTint="@color/blue"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/montserrat_semibold"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="10dp"
                        android:text="@string/add_btn"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
